{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeExecutable": "node",
      "request": "launch",
      "name": "Запустить программу",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server.js"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker (Node)",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/server",
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
